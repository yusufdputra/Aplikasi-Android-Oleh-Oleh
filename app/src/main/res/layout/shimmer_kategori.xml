<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CLVerifikasiAkun"
    android:layout_marginVertical="@dimen/small"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/title_bg"
    android:backgroundTint="@color/white">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_foto_ktg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="Menu Masjid Icon"
                    android:scaleType="fitCenter"
                    android:src="@color/grey_font"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/tv_ktg"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey_font"
                    android:layout_marginTop="@dimen/small"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="@+id/iv_foto_ktg"
                    app:layout_constraintStart_toStartOf="@+id/iv_foto_ktg"
                    app:layout_constraintTop_toBottomOf="@+id/iv_foto_ktg" />

        </LinearLayout>

        <LinearLayout

            android:layout_marginLeft="@dimen/small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="Menu Masjid Icon"
                    android:scaleType="fitCenter"
                    android:src="@color/grey_font"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey_font"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/small"
                    app:layout_constraintEnd_toEndOf="@+id/iv_foto_ktg"
                    app:layout_constraintStart_toStartOf="@+id/iv_foto_ktg"
                    app:layout_constraintTop_toBottomOf="@+id/iv_foto_ktg" />

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>