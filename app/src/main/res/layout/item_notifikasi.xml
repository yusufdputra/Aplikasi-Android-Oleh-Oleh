<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_notifikasi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/nav_header_vertical_spacing"
    android:background="@drawable/bg_notif_read"
    android:orientation="horizontal"
    android:padding="@dimen/nav_header_vertical_spacing">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_notif"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@color/background_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_judul_notif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_isi_notif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_waktu_notif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>