<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small"
    android:orientation="horizontal"
    android:background="@drawable/bg_item"
    android:paddingHorizontal="@dimen/margin_icon"
    android:paddingVertical="@dimen/small">

    <TextView
        android:id="@+id/tv_nama_suplier"
        android:layout_width="match_parent"
        android:text="@string/action_search"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_item_barang"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        android:layout_width="match_parent"
        tools:listitem="@layout/item_checkout"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_suplier"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>